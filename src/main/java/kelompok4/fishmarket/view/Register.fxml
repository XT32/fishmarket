<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
    <children>
        <!-- Header Label -->
        <Label layoutX="256.0" layoutY="76.0" text="Daftar Akun">
            <font>
                <Font name="Humnst777 Blk BT Black" size="14.0" />
            </font>
        </Label>
      <TextField id="nama" fx:id="usernameField1" layoutX="300.0" layoutY="140.0" promptText="Enter Nama" />

        <!-- Username Field -->
        <TextField id="username" fx:id="usernameField" layoutX="300.0" layoutY="182.0" promptText="Enter Username" />
      <TextField id="alamat" fx:id="emailField1" layoutX="300.0" layoutY="225.0" promptText="Alamat" />

        <!-- Email Field -->
        <TextField id="email" fx:id="emailField" layoutX="300.0" layoutY="263.0" promptText="Enter Email" />
      <PasswordField id="password" fx:id="confirmPasswordField1" layoutX="300.0" layoutY="305.0" promptText="Password" />

        <!-- Confirm Password Field -->
        <PasswordField id="password2" fx:id="confirmPasswordField" layoutX="300.0" layoutY="348.0" promptText="Confirm Password" />

        <!-- Register Button -->
        <Button id="register" fx:id="registerButton" layoutX="264.0" layoutY="410.0" onAction="#handleRegister" text="Register">
            <font>
                <Font name="CountryBlueprint" size="15.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
